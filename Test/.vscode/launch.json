{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
    ],
    "configurations": [
        {
            "name": "Run (Debug)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/",
            "environment": [],
            "preLaunchTask": "Build (Debug)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "externalConsole": true,
                "MIMode": "gdb",
            },
            "linux": {
                "externalConsole": false,
                "MIMode": "gdb",
            },
            "osx": {
                "externalConsole": true,
                "MIMode": "lldb",
            },
        },
        {
            "name": "Run (Release)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../${input:helper_platform_bin_name}/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/",
            "environment": [],
            "preLaunchTask": "Build (Release)",
            "windows": {
                "externalConsole": true,
                "MIMode": "gdb",
            },
            "linux": {
                "externalConsole": false,
                "MIMode": "gdb",
            },
            "osx": {
                "externalConsole": true,
                "MIMode": "lldb",
            },
        },
    ]
}
