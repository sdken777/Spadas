{
    "options": {
        "env": {
            "TYPE": "exe",
            "COMPILE": "cross",
            "TARGET": "test",
            "DEPENDS_X86_WINDOWS": "spadas",
            "DEPENDS_X86_LINUX": "spadas",
            "DEPENDS_ARM_LINUX": "spadas",
            "DEPENDS_X86_MACOS": "spadas",
            "FRAMEWORKS_X86_MACOS": "",
        }
    },
    "inputs": [
        {
            "id": "helper_platform_code",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_code"
                ]
            }
        },
        {
            "id": "helper_platform_env_var_depends",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_env_var",
                    "DEPENDS",
                ]
            }
        },
        {
            "id": "helper_platform_env_var_frameworks",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_env_var",
                    "FRAMEWORKS",
                ]
            }
        },
    ],
    "tasks": [
        {
            "type": "process",
            "label": "调试构建",
            "group": "build",
            "command": "make",
            "args": [
                "-j4",
                "MODE=debug",
                "PLATFORM=${input:helper_platform_code}",
                "DEPENDS=${input:helper_platform_env_var_depends}",
            ],
            "problemMatcher":"$gcc",
            "osx": {
                "args": [
                    "-j4",
                    "MODE=debug",
                    "PLATFORM=${input:helper_platform_code}",
                    "DEPENDS=${input:helper_platform_env_var_depends}",
                    "FRAMEWORKS=${input:helper_platform_env_var_frameworks}",
                ],
            }
        },
        {
            "type": "process",
            "label": "发布构建",
            "group": "build",
            "command": "echo",
            "args": [ "Done." ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "(子任务)发布构建(X86-Windows目标)",
                "(子任务)发布构建(X86-Ubuntu1804目标)",
                "(子任务)发布构建(Arm-Ubuntu1604目标)",
                "(子任务)发布构建(X86-MacOS1010目标)",
            ],
            "problemMatcher":[],
        },
        {
            "type": "process",
            "label": "清理",
            "group": "build",
            "command": "make",
            "args": [
                "clean",
            ],
            "problemMatcher":[],
        },

        // 以下为子任务

        {
            "type": "process",
            "label": "(子任务)发布构建(X86-Windows目标)",
            "command": "make",
            "args": [
                "-j4",
                "MODE=release",
                "PLATFORM=windows",
                "DEPENDS=${DEPENDS_X86_WINDOWS}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "(子任务)发布构建(X86-Ubuntu1804目标)",
            "command": "make",
            "args": [
                "-j4",
                "MODE=release",
                "PLATFORM=linux",
                "DEPENDS=${DEPENDS_X86_LINUX}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "(子任务)发布构建(Arm-Ubuntu1604目标)",
            "command": "make",
            "args": [
                "-j4",
                "MODE=release",
                "PLATFORM=linuxarm",
                "DEPENDS=${DEPENDS_ARM_LINUX}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "(子任务)发布构建(X86-MacOS1010目标)",
            "command": "make",
            "args": [
                "-j4",
                "MODE=release",
                "PLATFORM=macos",
                "DEPENDS=${DEPENDS_X86_MACOS}",
                "FRAMEWORKS=${FRAMEWORKS_X86_MACOS}",
            ],
            "problemMatcher":"$gcc",
        },
    ],
    "version": "2.0.0"
}
