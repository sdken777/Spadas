{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        }
    ],
    "configurations": [
        {
            "name": "调试运行",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/",
            "environment": [],
            "preLaunchTask": "调试构建",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "externalConsole": true,
                "MIMode": "gdb",
            },
            "linux": {
                "externalConsole": false,
                "MIMode": "gdb",
            },
            "osx": {
                "externalConsole": true,
                "MIMode": "lldb",
            },
        },
    ]
}
