{
    "options": {
        "env": {
            "TYPE": "lib",
            "COMPILE": "cross",
            "TARGET": "spadas",
            "TARGET_VERSION": "8",
            "DEPENDS_X86_WINDOWS": "spadasupport winmm ws2_32 iphlpapi",
            "DEPENDS_X86_LINUX": "pthread dl",
            "DEPENDS_ARM_LINUX": "pthread dl",
            "DEPENDS_X86_MACOS": "pthread dl",
            "FRAMEWORKS_X86_MACOS": "CoreServices",
            "SEARCH_INCLUDE": "./3party",
        }
    },
    "inputs": [
        {
            "id": "helper_platform_code",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_code"
                ]
            }
        },
        {
            "id": "helper_platform_env_var_depends",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_env_var",
                    "DEPENDS",
                ]
            }
        },
        {
            "id": "helper_platform_env_var_frameworks",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_env_var",
                    "FRAMEWORKS",
                ]
            }
        },
        {
            "id": "helper_thread_count",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "thread_count",
                    "0.8",
                ]
            }
        },
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "make",
            "dependsOn": [
                "Subtask: Generate resource code",
            ],
            "problemMatcher":"$gcc",
            "windows": {
                "args": [
                    "-j${input:helper_thread_count}",
                    "MODE=debug",
                    "PLATFORM=${input:helper_platform_code}",
                    "DEPENDS=${input:helper_platform_env_var_depends}",
                    "MACRO_DEFINE=SPADAS_EXPORTS",
                ],
            },
            "linux": {
                "args": [
                    "-j${input:helper_thread_count}",
                    "MODE=debug",
                    "PLATFORM=${input:helper_platform_code}",
                    "DEPENDS=${input:helper_platform_env_var_depends}",
                ],
            },
            "osx": {
                "args": [
                    "-j${input:helper_thread_count}",
                    "MODE=debug",
                    "PLATFORM=${input:helper_platform_code}",
                    "DEPENDS=${input:helper_platform_env_var_depends}",
                    "FRAMEWORKS=${input:helper_platform_env_var_frameworks}",
                ],
            },
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "cp",
            "args": [
                "-vf",
                "./spadas.h",
                "./spadas_core.h",
                "./spadas_define.h",
                "./spadas_template.h",
                "./spadas_deprecated.h",
                "../include/",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Generate resource code",
                "Subtask: Build for X86-Windows target (Release)",
                "Subtask: Build for X86-Ubuntu1804 target (Release)",
                "Subtask: Build for Arm-Ubuntu1604 target (Release)",
                "Subtask: Build for X86-MacOS1010 target (Release)",
                "Subtask: Create 'include' folder",
            ],
            "problemMatcher":[],
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "make",
            "args": [
                "clean",
            ],
            "problemMatcher":[],
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Generate resource code",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "gen_resource_code",
            ],
        },
        {
            "type": "process",
            "label": "Subtask: Build for X86-Windows target (Release)",
            "hide": true,
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=windows",
                "DEPENDS=${DEPENDS_X86_WINDOWS}",
                "MACRO_DEFINE=SPADAS_EXPORTS",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Subtask: Build for X86-Ubuntu1804 target (Release)",
            "hide": true,
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=linux",
                "DEPENDS=${DEPENDS_X86_LINUX}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Subtask: Build for Arm-Ubuntu1604 target (Release)",
            "hide": true,
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=linuxarm",
                "DEPENDS=${DEPENDS_ARM_LINUX}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Subtask: Build for X86-MacOS1010 target (Release)",
            "hide": true,
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=macos",
                "DEPENDS=${DEPENDS_X86_MACOS}",
                "FRAMEWORKS=${FRAMEWORKS_X86_MACOS}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Subtask: Create 'include' folder",
            "hide": true,
            "command": "mkdir",
            "args": [
                "-p",
                "../include",
            ],
            "problemMatcher":[],
        },
    ],
    "version": "2.0.0"
}